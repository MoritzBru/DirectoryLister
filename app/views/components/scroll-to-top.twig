<div class="fixed bottom-0 left-0 right-0 pointer-events-none" x-data="{ visible: false }"
    x-init="visible = window.scrollY > 10" x-show="visible" x-transition.opacity
>
    <div class="container flex justify-end px-4 py-10 mx-auto xl:max-w-screen-xl">
        <button class="flex items-center justify-center w-12 h-12 text-white transition-colors bg-gray-700 rounded-full shadow-lg cursor-pointer pointer-events-auto dark:bg-gray-700 hover:bg-gray-800 dark:hover:bg-gray-600 opacity-80 hover:opacity-90"
            @click="window.scrollTo({ top: 0, left: 0, behavior: 'smooth' });" @scroll.window="visible = window.scrollY > 10"
        >
            <i class="fas fa-arrow-up fa-lg" aria-hidden></i>
            <span class="sr-only">{{ translate('scroll_to_top') }}</span>
        </button>
    </div>
</div>
