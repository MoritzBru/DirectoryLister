<a
    href="{{ parentDir ? parent_url(path) : file_url(file.getPathname) }}"
    class="flex flex-col items-center font-mono rounded-lg group hover:bg-gray-200 dark:hover:bg-gray-700"
    title="{{ parentDir ? parent_url(path) : file_url(file.getPathname) }}"
>
    <div class="flex items-center justify-between w-full p-4">
        <div class="pr-2">
            {% if parentDir %}
                <i class="fas fa-level-up-alt fa-flip-horizontal fa-fw fa-lg"></i>
            {% else %}
                {{ icon(file) | raw }}
            {% endif %}
        </div>

        <div class="flex-1 truncate">
            {{ parentDir ? '..' : file.getRelativePathname }}
        </div>

        {# {% if file.isFile %}
            <div class="ml-2">
