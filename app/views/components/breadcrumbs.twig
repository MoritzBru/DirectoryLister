<div class="flex-1 py-1 overflow-x-auto font-mono text-sm tracking-tight text-white whitespace-nowrap">
    <a href="." class="inline-block hover:underline">
        {{ config('home_text') | default(translate('home')) }}
    </a>

    {% if path is not null %}
        {% for name, path in breadcrumbs(path) %}
            / <a href="{{ path }}" class="inline-block hover:underline last:font-bold">{{ name }}</a>
        {% endfor %}
    {% endif %}
</div>
