<button class="flex flex-col items-center justify-center w-4 h-8 bg-gray-900 rounded-full cursor-pointer bg-opacity-30" title="{{ translate('toggle_theme') }}" @click="toggleTheme()">
    <span class="relative w-5 h-5 duration-300 ease-in-out transform -translate-y-2 bg-white rounded-full shadow-md dark:translate-y-2">
        <i class="absolute inset-0 !flex items-center justify-center text-yellow-400 transition-transform duration-300 scale-100 fas fa-sun fa-xs dark:scale-0"></i>
        <i class="absolute inset-0 !flex items-center justify-center text-gray-400 transition-transform duration-300 scale-0 fas fa-moon fa-xs dark:scale-100"></i>
    </span>
    <span class="sr-only">{{ translate('toggle_theme') }}</span>
</button>
