<form action="." method="get" class="relative block rounded-full shadow-inner bg-primary-700 group dark:bg-primaryDark-800">
    <input type="text" value="{{ search }}" name="search" placeholder="{{ translate('search') }}..."
        class="w-full px-10 py-2 text-white placeholder-gray-900 bg-transparent rounded-full"
        @keyup.?.prevent.window="$el.focus()" @focus="$event.target.select()"
    >

    <div class="absolute inset-y-0 left-0 flex items-center ml-2 pointer-events-none">
        <div class="flex items-center justify-center w-6 h-6 text-gray-900 text-opacity-50">
            <i class="fas fa-search fa-fw"></i>
        </div>
    </div>

    {% if search %}
        <div class="absolute inset-y-0 right-0 flex items-center mr-2">
            <a href="." class="flex items-center justify-center w-6 h-6 text-gray-900 text-opacity-50 rounded-full hover:bg-red-700 hover:text-white hover:text-opacity-100">
                <i class="fas fa-times"></i>
            </a>
        </div>
    {% endif %}
</form>
